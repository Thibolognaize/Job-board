<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clarternance - Annonces</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
</head>

<body style="background-color: #f4b324;">

    <%- include('../partials/header') %>
        <main class="h-100">

            <!-- Container des offres  -->
            <div style="background-color: #f6e7d8c6;" class="container d-flex flex-column mt-5 justify-content-center">
                <div class="d-flex">
                    <!-- Partie gauche de la page -->
                    <div class="left-side w-50 min-vh-100 m-5 gap-3 flex-column align-items-center">
                        <div id="info-header" class="w-100">
                            <h2 class="p-5">Nos offres:</h2>
                        </div>
                        <div class="container">
                            <!-- Début de l'affichage dynamique -->
                            <% if (advertisements.length> 0) { %>
                                <% advertisements.forEach((advertisement)=> { %>
                                    <div class="card m-2 mb-5 w-95">
                                        <div class="card-header">
                                            <%= advertisement.company_name || "Entreprise non spécifiée" %>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= advertisement.title %>
                                            </h5>
                                            <p class="card-text">
                                                <%= advertisement.description %>
                                            </p>
                                            <a href="#add-info" class="btn btn-primary"
                                                onclick="showAdvertisementDetail('<%= advertisement.id %>')">
                                                Voir l'annonce
                                            </a>

                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <p>Aucune annonce trouvée.</p>
                                            <% } %>
                        </div>
                    </div>
                    <!-- Séparateur -->
                    <div class="vh-100 d-inline-block border my-5 border-black"></div>

                    <!-- Partie droite de la page -->
                    <div
                        class="right-side mborder-0 my-5 min-vh-100 w-50 d-flex flex-column align-items-center justify-content-center p-3">
                        <div id="detail-content"
                            class="w-100 h-80 d-flex flex-column align-items-center justify-content-start p-4"
                            style="background-color: white; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); overflow-y: auto;">
                            <p class="text-center mt-5 text-muted">Sélectionnez une annonce pour voir les détails.
                            </p>
                        </div>
                    </div>


                </div>

                <!-- Pagination -->
                <div class="container mx-5 d-flex justify-content-center my-4">
                    <nav aria-label="Pagination des annonces">
                        <ul class="pagination">
                            <!-- Lien vers la page précédente (désactivé si on est sur la première page) -->
                            <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="/advertisements?page=<%= currentPage - 1 %>"
                                    aria-label="Précédent">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <!-- Boucle pour afficher les numéros de page -->
                            <% for (let i=1; i <=totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/advertisements?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>

                                    <!-- Lien vers la page suivante (désactivé si on est sur la dernière page) -->
                                    <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="/advertisements?page=<%= currentPage + 1 %>"
                                            aria-label="Suivant">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                        </ul>
                    </nav>
                </div>

            </div>
        </main>
        <%- include("../partials/footer") %>
            <!-- Scripts bootstrap -->
            <script src="/js/bootstrap.bundle.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>
            <script>
                async function showAdvertisementDetail(id) {
                    const detailContent = document.getElementById('detail-content');
                    detailContent.innerHTML = `
            <div class="w-100 d-flex flex-column align-items-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
                <p class="text-center mt-2">Chargement...</p>
            </div>
        `;

                    try {
                        const response = await fetch(`/advertisements/${id}/json`);
                        if (!response.ok) {
                            throw new Error(`Erreur HTTP! statut: ${response.status}`);
                        }
                        const advertisement = await response.json();
                        const logoSrc = advertisement.img_path || "/chemin/vers/image/par/defaut.jpg";

                        detailContent.innerHTML = `
                <div id="add-info" class="w-100 d-flex flex-column align-items-center">
                    <img
                        src="${logoSrc}"
                        alt="Logo de l'entreprise"
                        class="img-fluid mb-3"
                        style="max-width: 150px; max-height: 150px; border-radius: 50%; object-fit: cover; border: 3px solid #f4b324;"
                    >
                    <h2 class="text-center mb-3" style="color: #333;">${advertisement.title}</h2>
                    <div class="card w-100 mb-3" style="border: none; background-color: transparent;">
                        <div class="card-body text-start">
                            <p class="card-text mb-2"><strong>Entreprise :</strong> ${advertisement.company_name || "Non spécifiée"}</p>
                            <p class="card-text mb-2">
                                <strong>Site web :</strong>
                                ${advertisement.website ?
                                `<a href="${advertisement.website}" target="_blank" class="text-decoration-none" style="color: #0d6efd;">${advertisement.website}</a>` :
                                "Non spécifié"
                            }
                            </p>
                            <p class="card-text mb-2"><strong>Vues :</strong> ${advertisement.views || 0}</p>
                            <p class="card-text mb-2">
                                <strong>Dernière mise à jour :</strong>
                                ${new Date(advertisement.last_update).toLocaleDateString('fr-FR')}
                            </p>
                            <div class="mt-3">
                                <h5 class="mb-2" style="color: #333;">Description :</h5>
                                <div class="p-3" style="background-color: #f8f9fa; border-radius: 8px; border-left: 4px solid #f4b324;">
                                    <p class="mb-0" style="white-space: pre-line;">${advertisement.description}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
                    } catch (error) {
                        console.error("Erreur lors de la récupération des détails de l'annonce :", error);
                        detailContent.innerHTML = `
                <div class="w-100 d-flex flex-column align-items-center justify-content-center">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 2rem;"></i>
                    <p class="text-center text-danger mt-2">Erreur lors du chargement des détails.</p>
                </div>
            `;
                    }
                }
            </script>



</body>

</html>