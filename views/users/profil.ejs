<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
</head>

<body>
    <%- include("../partials/header") %>

    <div class="container-fluid" >
        <div class="row" id="row">            
            <div class="p-3 col profile-info" style="font-size: large;">
                <img src="/assets/images/default-avatar.webp" class="img-thumbnail rounded-circle m-3"><br>
                
                <a href="#1" class="link-underline link-underline-opacity-0 p-4">Parametres Utilisateur</a><br>
                <a href="#2" class="link-underline link-underline-opacity-0 p-4">Documents</a><br>
                <a href="#3" class="link-underline link-underline-opacity-0 p-4">Annonces Postulés</a>
            </div>
            <div class="p-5 col-10">
                <h2 id="1">Parametres Utilisateur</h2>
                <div class="container m-3">
                    <form action="/users/profile" method="post" id="formulaire">
                        <div class="row">
                            <div class="mb-3 col">
                                <label for="fname" class="form-label">Prénom</label>
                                <input type="text" class="form-control" id="fname" name="first_name" placeholder="<%=user[0].first_name%>" value="<%=user[0].first_name%>" >
                            </div>
                            <div class="mb-3 col">
                                <label for="lname" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="lname" placeholder= "<%= user[0].last_name  %>" value="<%=user[0].last_name%>">
                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-3 col">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" placeholder= "<%= user[0].email %>" value= "<%= user[0].email %>"  >
                            </div>

                            <div class="mb-3 col">
                                <label for="tel" class="form-label">Numéro de Téléphone</label>
                                <input type="tel" class="form-control" id="tel" placeholder="<%= user[0].tel  %>" value="<%= user[0].tel  %>">
                            </div>

                            <div class="mb-3 col">
                                <input type="checkbox" id="got_license" name="got_license" <%= user[0].got_license ? 'checked' : '' %>> <!-- ? fait poser la question if true alors checked sinon c'est pas checked -->
                                <label for="got_license">J'ai le permis de voiture</label>                             
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="profile_desc" class="form-label">Infos</label>
                            <textarea class="form-control" id="profile_desc" name="profile_desc" placeholder="<%= user[0].profile_desc %>" value="<%= user[0].profile_desc %>" rows="3"></textarea>
                        </div>

                        <button class="btn update_button" type="submit">Enregistrer les changements</button>

                    </form>
                </div>
                <h2 id="2" class="mt-5">Documents</h2>
                <div class="container m-3">
                    <div class="row">
                        <input type="" name="" id="">

                    </div>
                </div>
            </div>
        </div>
        <script>
        const save = async (event) => {
            event.preventDefault();
            const form = document.getElementById("formulaire");
            const formData = {
                "id": "<%= user.id %>",
                "first_name": document.getElementById("first_name").value,
                "last_name": document.getElementById("last_name").value,
                "email": document.getElementById("email").value,
                "tel": document.getElementById("tel").value,
                "got_license": document.getElementById("license").value,
                "profile_desc": document.getElementById("desc").value,
                "address": document.getElementById("address").value,
                "profile_picture_path": document.getElementById("profile_pic").value,
                "cv_path": document.getElementById("cv").value
            }
            try {
                const response = await fetch('/admin/user/<%=user.id%>', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const message = await response.text(); // Recupère le message de réponse depuis le server
                console.log(message);

                // Affiche une alerte en fonction du statut de la réponse
                const alertContainer = document.getElementById("alertContainer");
                if (response.ok) {
                    alertContainer.innerHTML = `
                    <div class="alert alert-success">
                    ${message}
                    </div>
                `;
                } else {
                    alertContainer.innerHTML = `
                    <div class="alert alert-danger">
                    ${message}
                    </div>
                `;
                }
            } catch (error) {
                console.error("Erreur lors de la requête :", error);
                document.getElementById("alertContainer").innerHTML = `
                <div class="alert alert-danger">
                    Erreur réseau : ${error.message}
                </div>
                `;
            }
        };

        const remove = async (event) => {
            if (confirm("Êtes vous sur de supprimer un utilisateur ?")) {
                try {
                    const response = await fetch('/admin/user/<%= user.id %>', {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    });
                    if (response.ok) {
                        // Rediriger ou mettre à jour l'interface utilisateur
                        const message = await response.text();
                        alert(message);
                        window.location.href = '/admin/users';
                    } else {
                        alert("Erreur lors de la suppression de l'utilisateur");
                    }
                } catch (error) {
                    console.error("Erreur réseau :", error);
                }
            }
        };
    </script>

    <%- include("../partials/footer") %>
    <script src="/js/bootstrap.bundle.min.js"></script></body>
</html>