<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include("../partials/header") %>

        <div class="p-5 container">
            <h2 id="1">Parametres Utilisateur</h2>
            <div class="container m-3">
                <form id="formulaire">
                    <div class="row">
                        <div class="mb-3 col-12 col-sm-6">
                            <label for="first_name" class="form-label">Prénom</label>
                            <input type="text" class="form-control" id="first_name" name="first_name"
                                value="<%=user.first_name%>">
                        </div>
                        <div class="mb-3 col-12 col-sm-6">
                            <label for="last_name" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="last_name" name="last_name"
                                value="<%=user.last_name%>">
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-12 col-sm-6">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>">
                        </div>

                        <div class="mb-3 col-12 col-sm-6">
                            <label for="tel" class="form-label">Numéro de Téléphone</label>
                            <input type="tel" class="form-control" id="tel" name="tel" value="<%= user.tel  %>">
                        </div>

                        <div class="mb-3 col-12 col-sm-6">
                            <label for="got_license">J'ai le permis de voiture</label> <br>

                            <input type="checkbox" id="got_license" name="got_license" <%=user.got_license ? 'checked'
                                : '' %>>
                            <label for="got_license">Oui</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="profile_desc" class="form-label">Infos</label>
                        <textarea class="form-control" id="profile_desc" name="profile_desc"
                            rows="3"><%= user.profile_desc %></textarea>
                    </div>

                    <button onclick="save(event)" class="btn updateProfileButton" type="button">Enregistrer les
                        changements</button>
                </form>

                <div>
                    <button onclick="remove(event)" class="btn deleteUserButton mt-3" type="button"
                        name="deleteUserButton"> Effacer le
                        compte
                    </button>
                </div>

                <div class="mt-3" id="alertContainer"></div>

            </div>

        </div>
        </div>
        </div>

        <script>
            const save = async (event) => {
                console.log("ouIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIII")
                event.preventDefault();
                const form = document.getElementById("formulaire");
                const formData = {
                    "id": "<%= user.id %>",
                    "first_name": document.getElementById("first_name").value,
                    "last_name": document.getElementById("last_name").value,
                    "email": document.getElementById("email").value,
                    "tel": document.getElementById("tel").value,
                    "got_license": document.getElementById("got_license").value,
                    "profile_desc": document.getElementById("profile_desc").value,
                    "address": document.getElementById("address").value,
                    "profile_picture_path": document.getElementById("profile_pic").value,
                    "cv_path": document.getElementById("cv").value
                }

                try {
                    const response = await fetch('/user/profil/<%=user.id%>', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData)
                    });

                    const message = await response.text(); // Recupère le message de réponse depuis le server
                    console.log(message);

                    // Affiche une alerte en fonction du statut de la réponse
                    const alertContainer = document.getElementById("alertContainer");
                    if (response.ok) {
                        alertContainer.innerHTML = `
                    <div class="alert alert-success">
                    ${message}
                    </div>
                `;
                    } else {
                        alertContainer.innerHTML = `
                    <div class="alert alert-danger">
                    ${message}
                    </div>
                `;
                    }
                } catch (error) {
                    console.error("Erreur lors de la requête :", error);
                    document.getElementById("alertContainer").innerHTML = `
                <div class="alert alert-danger">
                    Erreur réseau : ${error.message}
                </div>
                `;
                }
            };

            const remove = async (event) => {
                if (confirm("Êtes vous sur de supprimer un utilisateur ?")) {
                    try {
                        const response = await fetch('/admin/user/<%= user.id %>', {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                        });
                        if (response.ok) {
                            // Rediriger ou mettre à jour l'interface utilisateur
                            const message = await response.text();
                            alert(message);
                            window.location.href = '/';
                        } else {
                            alert("Erreur lors de la suppression de l'utilisateur");
                        }
                    } catch (error) {
                        console.error("Erreur réseau :", error);
                    }
                }
            };
        </script>

        <%- include("../partials/footer") %>
            <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>