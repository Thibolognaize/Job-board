<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Companies</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
</head>

<body>
    <section class="container p-3">
        <h1 class="text-center mb-3">Admin - Companies</h1>
        <table class="table table-striped table-bordered table-hover table-sm table-responsive">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Website</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Adress</th>
                    <th scope="col">City</th>
                    <th scope="col">Siret</th>
                    <th scope="col">User_id</th>
                    <th scope="col">User_email</th>
                </tr>
            </thead>
            <% if (companies && companies.length> 0) { %>
                <tbody>
                    <% companies.forEach(company=> { %>
                        <tr class="clickable-row" data-href="/admin/company/<%= company.id %>">
                            <td>
                                <%= company.id %>
                            </td>
                            <td>
                                <%= company.name %>
                            </td>
                            <td>
                                <%= company.website %>
                            </td>
                            <td>
                                <%= company.contact %>
                            </td>
                            <td>
                                <%= company.address %>
                            </td>
                            <td>
                                <%= company.city %>
                            </td>
                            <td>
                                <%= company.num_siret %>
                            </td>
                            <td>
                                <%= company.user_id %>
                            </td>
                            <td>
                                <%= company.user_email %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
                <% } else { %>
                    <tbody>
                        <tr>
                            <td colspan="11" class="text-danger">No Companies found</td>
                        </tr>
                    </tbody>
                    <% } %>
        </table>
    </section>
    <script src="/js/clickableRows.js"></script>
</body>

</html>