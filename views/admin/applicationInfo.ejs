<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Application Info</title>
    <!-- Lien vers Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
    <style>
        .form-container {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin-right: -15px;
            margin-left: -15px;
        }

        .form-col {
            flex: 1;
            padding: 0 15px;
        }

        .btn-custom {
            margin: 10px 5px;
        }
    </style>
</head>

<body>
    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-yellow">
                        <h2 class="text-center">Informations Candidature</h2>
                    </div>
                    <div class="card-body">
                        <form class="form" id="applicationForm">
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="first_name">Prénom</label>
                                        <input type="text" class="form-control" name="first_name" id="first_name"
                                            value="<%= application.first_name %>" />
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="last_name">Nom</label>
                                        <input type="text" class="form-control" name="last_name" id="last_name"
                                            value="<%= application.last_name %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" name="email" id="email"
                                            value="<%= application.email %>" />
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="phone">Téléphone</label>
                                        <input type="text" class="form-control" name="phone" id="phone"
                                            value="<%= application.phone %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="advertisement_title">Titre de l'annonce</label>
                                        <input type="text" class="form-control" name="advertisement_title"
                                            id="advertisement_title" value="<%= application.advertisement_title %>"
                                            disabled />
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="application_date">Date de candidature</label>
                                        <input type="text" class="form-control" name="application_date"
                                            id="application_date"
                                            value="<%= new Date(application.application_date).toLocaleDateString('fr-FR') %>"
                                            disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="application_description">Description</label>
                                        <textarea class="form-control" rows="3" name="application_description"
                                            id="application_description"><%= application.application_description %></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="cv_path">CV</label>
                                        <input type="text" class="form-control" name="cv_path" id="cv_path"
                                            value="<%= application.cv_path %>" disabled />
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="is_answered">Répondu</label>
                                        <select class="form-control" name="is_answered" id="is_answered">
                                            <option value="<%= application.is_answered %>">
                                                <%= application.is_answered ? "Oui" : "Non" %>
                                            </option>
                                            <option value="true">Oui</option>
                                            <option value="false">Non</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Dernière mise à jour de l'annonce</label>
                                <p class="form-control-static">
                                    <%= new Date(application.last_update).toLocaleDateString('fr-FR') %>
                                </p>
                            </div>
                            <div class="form-row justify-content-center">
                                <a href="/admin/applications" class="btn btn-primary btn-custom">Retour à la liste des
                                    candidatures</a>
                                <button onclick="save(event)" class="btn btn-secondary btn-custom"
                                    type="button">Sauvegarder les infos</button>
                                <button onclick="remove(event)" class="btn btn-outline-danger btn-custom" type="button">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path
                                            d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0">
                                        </path>
                                    </svg>
                                    Supprimer
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-3" id="alertContainer"></div>
            </div>
        </div>
    </section>
    <script>
        const save = async (event) => {
            event.preventDefault();
            const formData = {
                "id": "<%= application.application_id %>",
                "first_name": document.getElementById("first_name").value,
                "last_name": document.getElementById("last_name").value,
                "email": document.getElementById("email").value,
                "phone": document.getElementById("phone").value,
                "application_description": document.getElementById("application_description").value,
                "is_answered": document.getElementById("is_answered").value
            }
            try {
                const response = await fetch('/admin/application/<%= application.application_id %>', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                const message = await response.text();
                const alertContainer = document.getElementById("alertContainer");
                if (response.ok) {
                    alertContainer.innerHTML = `
                    <div class="alert alert-success">
                    ${message}
                    </div>
                `;
                } else {
                    alertContainer.innerHTML = `
                    <div class="alert alert-danger">
                    ${message}
                    </div>
                `;
                }
            } catch (error) {
                console.error("Erreur lors de la requête :", error);
                document.getElementById("alertContainer").innerHTML = `
                <div class="alert alert-danger">
                    Erreur réseau : ${error.message}
                </div>
                `;
            }
        };
        const remove = async (event) => {
            if (confirm("Êtes vous sûr de supprimer cette candidature ?")) {
                try {
                    const response = await fetch('/admin/application/<%= application.application_id %>', {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    });
                    if (response.ok) {
                        const message = await response.text();
                        alert(message);
                        window.location.href = '/admin/applications';
                    } else {
                        alert("Erreur lors de la suppression de la candidature");
                    }
                } catch (error) {
                    console.error("Erreur réseau :", error);
                }
            }
        };
    </script>
</body>

</html>