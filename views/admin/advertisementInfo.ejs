<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Advertisement Info</title>
    <!-- Lien vers Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
</head>

<body>
    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-yellow">
                        <h2 class="text-center">Informations Annonce</h2>
                    </div>
                    <div class="card-body">
                        <form class="form" id="advertisementForm">
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="title">Titre</label>
                                        <input type="text" class="form-control" name="title" id="title"
                                            value="<%= advertisement.title %>" />
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="views">Vues</label>
                                        <input type="number" class="form-control" name="views" id="views"
                                            value="<%= advertisement.views %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="description">Description</label>
                                        <textarea class="form-control" rows="3" name="description"
                                            id="description"><%= advertisement.description %></textarea>
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="img_path">Chemin de l'image</label>
                                        <input type="text" class="form-control" name="img_path" id="img_path"
                                            value="<%= advertisement.img_path %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="is_active">Active</label>
                                        <select class="form-control" name="is_active" id="is_active">
                                            <option value="<%= advertisement.is_active %>">
                                                <%= advertisement.is_active ? "Oui" : "Non" %>
                                            </option>
                                            <option value="true">Oui</option>
                                            <option value="false">Non</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="companies_id">ID de l'entreprise</label>
                                        <input type="text" class="form-control" name="companies_id" id="companies_id"
                                            value="<%= advertisement.companies_id %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-col">
                                    <div class="form-group">
                                        <label for="company_name">Nom de l'entreprise</label>
                                        <input type="text" class="form-control" name="company_name" id="company_name"
                                            value="<%= advertisement.company_name %>" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Dernière mise à jour</label>
                                <p class="form-control-static">
                                    <%= advertisement.last_update %>
                                </p>
                            </div>
                            <div class="form-row justify-content-center">
                                <a href="/admin/advertisements" class="btn btn-primary btn-custom">Retour à la liste des
                                    annonces</a>
                                <button onclick="save(event)" class="btn btn-secondary btn-custom"
                                    type="button">Sauvegarder les infos</button>
                                <button onclick="remove(event)" class="btn btn-outline-danger btn-custom" type="button">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path
                                            d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0">
                                        </path>
                                    </svg>
                                    Supprimer
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-3" id="alertContainer"></div>
            </div>
        </div>
    </section>
    <script>
        const save = async (event) => {
            event.preventDefault();
            const formData = {
                "id": "<%= advertisement.id %>",
                "title": document.getElementById("title").value,
                "description": document.getElementById("description").value,
                "views": document.getElementById("views").value,
                "img_path": document.getElementById("img_path").value,
                "is_active": document.getElementById("is_active").value,
                "companies_id": document.getElementById("companies_id").value
            }
            try {
                const response = await fetch('/admin/advertisement/<%= advertisement.id %>', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                const message = await response.text();
                const alertContainer = document.getElementById("alertContainer");
                if (response.ok) {
                    alertContainer.innerHTML = `
                    <div class="alert alert-success">
                    ${message}
                    </div>
                `;
                } else {
                    alertContainer.innerHTML = `
                    <div class="alert alert-danger">
                    ${message}
                    </div>
                `;
                }
            } catch (error) {
                console.error("Erreur lors de la requête :", error);
                document.getElementById("alertContainer").innerHTML = `
                <div class="alert alert-danger">
                    Erreur réseau : ${error.message}
                </div>
                `;
            }
        };
        const remove = async (event) => {
            if (confirm("Êtes vous sûr de supprimer cette annonce ?")) {
                try {
                    const response = await fetch('/admin/advertisement/<%= advertisement.id %>', {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    });
                    if (response.ok) {
                        const message = await response.text();
                        alert(message);
                        window.location.href = '/admin/advertisements';
                    } else {
                        alert("Erreur lors de la suppression de l'annonce");
                    }
                } catch (error) {
                    console.error("Erreur réseau :", error);
                }
            }
        };
    </script>
</body>

</html>