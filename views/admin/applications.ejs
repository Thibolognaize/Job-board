<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Candidatures</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
</head>

<body>
    <section class="container p-3">
        <h1 class="text-center mb-3">Admin - Candidatures</h1>
        <table class="table table-striped table-bordered table-hover table-sm table-responsive">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Date</th>
                    <th scope="col">Description</th>
                    <th scope="col">Repondu?</th>
                    <th scope="col">Pr√©nom Candidat</th>
                    <th scope="col">Nom Candidat</th>
                    <th scope="col">Email Candidat</th>
                    <th scope="col">Tel Candidat</th>
                    <th scope="col">CV (path)</th>
                    <th scope="col">Titre de l'annonce</th>
                    <th scope="col">Anonce Active?</th>
                    <th scope="col">Derniere maj de l'annonce</th>
                </tr>
            </thead>
            <% if (applications && applications.length> 0) { %>
                <tbody>
                    <% applications.forEach(application=> { %>
                        <tr class="clickable-row" data-href="/admin/application/<%= application.id %>">
                            <td>
                                <%= application.application_id %>
                            </td>
                            <td>
                                <%= new Date(application.application_date).toLocaleDateString('fr-FR') %>
                            </td>
                            <td>
                                <%= application.application_description %>
                            </td>
                            <td>
                                <%= application.is_answered %>
                            </td>
                            <td>
                                <%= application.first_name %>
                            </td>
                            <td>
                                <%= application.last_name %>
                            </td>
                            <td>
                                <%= application.email %>
                            </td>
                            <td>
                                <%= application.phone %>
                            </td>
                            <td>
                                <%= application.cv_path %>
                            </td>
                            <td>
                                <%= application.advertisement_title %>
                            </td>
                            <td>
                                <%= application.is_active %>
                            </td>
                            <td>
                                <%= new Date(application.last_update).toLocaleDateString('fr-FR') %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
                <% } else { %>
                    <tbody>
                        <tr>
                            <td colspan="11" class="text-danger">No applications found</td>
                        </tr>
                    </tbody>
                    <% } %>
        </table>
    </section>
    <script src="/js/clickableRows.js"></script>
</body>

</html>