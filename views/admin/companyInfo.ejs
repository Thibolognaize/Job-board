<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Company Infos</title>
    <!-- Lien vers Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
</head>

<body>
    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                c.id,
                c.name,
                c.website,
                c.contact,
                c.address,
                c.city,
                u.id as user_id,
                u.email as user_email
                <div class="card">
                    <div class="card-header bg-yellow">
                        <h2 class="text-center">Informations Entreprise</h2>
                    </div>
                    <form class="form" id="userForm">
                        <div class="row mb-3">
                            <div class="col-md-6 text-center">
                                <label class="card-title" for="name">Name</label><br><input class="card-text"
                                    type="text" name="name" id="name" value="<%= company.name  %>" />
                                <br>
                            </div>
                            <div class="col-md-6 text-center">
                                <label for="website">Website</label><br>
                                <input type="text" name="website" id="website" value="<%= company.website %>" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6 text-center">
                                <label for="contact">Contact</label><br>
                                <input type="text" name="contact" id="contact" value="<%= company.contact %>">
                            </div>
                            <div class="col-md-6 text-center">
                                <label for="address">Addresse</label><br>
                                <input type="text" name="address" id="address" value="<%= company.address %>">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6 text-center">
                                <label for="city">Ville</label><br>
                                <input type="text" name="city" id="city" value="<% company.city %>">
                            </div>
                            <div class="col-md-6 text-center">
                                <label for="id_user">Id Utilisateur</label><br>
                                <input type="text" name="id_user" id="id_user" value="<%= company.id_user %>">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6 text-center">
                                <label for="user_email">Email Utilisateur</label><br>
                                <input type="text" name="user_email" id="user_email"
                                    value="<%= company.user_email %>" />
                            </div>
                        </div>
                        <div class="row d-flex justify-content-evenly">
                            <a href="/admin/users" class="btn btn-primary w-auto m-2">Retour à la liste des
                                utilisateurs</a>
                            <button onclick="save(event)" class="btn btn-secondary w-auto m-2">Sauvegarder les
                                infos</button>
                            <button onclick="remove(event)" type="button" class="btn btn-outline-danger w-auto">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0">
                                    </path>
                                </svg>
                                Supprimer
                            </button>
                        </div>
                        <div class="row mb-3">
                        </div>
                    </form>
                </div>
                <div class="mt-3" id="alertContainer"></div>
            </div>
        </div>
    </section>
    <script>
        const save = async (event) => {
            event.preventDefault();
            const form = document.getElementById("userForm");
            const formData = {
                "id": "<%= user.id %>",
                "first_name": document.getElementById("first_name").value,
                "last_name": document.getElementById("last_name").value,
                "email": document.getElementById("email").value,
                "tel": document.getElementById("tel").value,
                "got_license": document.getElementById("license").value,
                "profile_desc": document.getElementById("desc").value,
                "address": document.getElementById("address").value,
                "profile_picture_path": document.getElementById("profile_pic").value,
                "cv_path": document.getElementById("cv").value
            }
            try {
                const response = await fetch('/admin/user/<%=user.id%>', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const message = await response.text(); // Recupère le message de réponse depuis le server
                console.log(message);

                // Affiche une alerte en fonction du statut de la réponse
                const alertContainer = document.getElementById("alertContainer");
                if (response.ok) {
                    alertContainer.innerHTML = `
                    <div class="alert alert-success">
                    ${message}
                    </div>
                `;
                } else {
                    alertContainer.innerHTML = `
                    <div class="alert alert-danger">
                    ${message}
                    </div>
                `;
                }
            } catch (error) {
                console.error("Erreur lors de la requête :", error);
                document.getElementById("alertContainer").innerHTML = `
                <div class="alert alert-danger">
                    Erreur réseau : ${error.message}
                </div>
                `;
            }
        };

        const remove = async (event) => {
            if (confirm("Êtes vous sur de supprimer un utilisateur ?")) {
                try {
                    const response = await fetch('/admin/user/<%= user.id %>', {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    });
                    if (response.ok) {
                        // Rediriger ou mettre à jour l'interface utilisateur
                        const message = await response.text();
                        alert(message);
                        window.location.href = '/admin/users';
                    } else {
                        alert("Erreur lors de la suppression de l'utilisateur");
                    }
                } catch (error) {
                    console.error("Erreur réseau :", error);
                }
            }
        };
    </script>
</body>

</html>